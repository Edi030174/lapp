        <space width="20px"></space>
        <groupbox mold="3d">
            <caption label="" style="font-weight:bold"/>
            <hbox>
            <vbox>
                <hbox>
                <label value="Status Permohonan : "/>
                </hbox>
                <radiogroup id="radiogroup_StatusPermohonanManagerPemohon">
                    <hbox>
                        <radio id="radio_DisetujuiManagerPemohon" label="disetujui" value="DISETUJUI" selected="true"></radio>
                        <radio id="radio_DitolakManagerPemohon" label="ditolak" value="DITOLAK"></radio>
                    </hbox>
                </radiogroup>
                <space height="2px"></space>
                <hbox>
                    <label value="Tanggal : "/>
                    <datebox id="datebox_Tanggal2" format="dd MMMM yyyy" readonly="true" width="150px"/>
                </hbox>
                <hbox>
                    <label value="Pelaksana : "/>
                    <textbox id="textbox_NikPelaksana"/>
                </hbox>
                <space height="2px"></space>
            </vbox>
            <vbox>
                <label value="catatan : "/>
                <fckeditor id="fck_CatatanManagerPemohon" height="99%" width="484px"
                       customConfigurationsPath="/js/fckeditor.js"
                       toolbarSet="Basic"/>
            </vbox>
            </hbox>
        </groupbox>
    </window>
